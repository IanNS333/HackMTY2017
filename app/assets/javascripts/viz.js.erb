var game = new Phaser.Game(650, 350, Phaser.AUTO, 'video', { preload: preload, create: create, update: update, render: render });

function preload(){
  game.load.image('user1',"<%= asset_path('block.png')%>");//user1
  game.load.image('user2',"<%= asset_path('blueArrow.png')%>");//user2
  game.load.image('flag',"<%= asset_path('checkeredFlag.png')%>");//
  game.load.image('obst',"<%= asset_path('block.png')%>");//
}

//JSON shit
var j=''
var json=JSON.parse(j);

var spriteA= new Array();//Sprites
var generationA;//Gerardo shit
var counterA= new Array();//Sum count genome

var spriteB= new Array();
var generationB;
var counterB= new Array();

var obstacles= new Array();//Sprites
var obstacleCoord= new Array();//Gerardo shit

var speed=10;
var con=100;

var flag;
var start;
//TEMP VALUES
var playerNo=11;
var obstaclesNo=50;
var currentgen;// IMPORTANT
var currentStringpos=1;
var playerStartX=150;
var playerStartY=150;

function restartThings(){

  //SPRITES
  // flag=game.add.sprite(flag[0],flag[1],'flag'); //change coord
  // game.physics.enable(flag, Phaser.Physics.ARCADE);

  for(var i=0;i<generationA[0].length;i++){  //counter for sums
    counterA[i]=0;
    counterB[i]=0;
  }

  //Add USERS to arrays and alive
  for(var i=0;i<generationA[0].length;i++){
    spriteA[i]=game.add.sprite(playerStartX,playerStartY,'user1');
    // console.log(i);
    if(generationA[currentgen][i][0]==7){
      spriteA[i].angle-=45;
    }else if(generationA[currentgen][i][0]==1){
      spriteA[i].angle+=45;
    }else if(generationA[currentgen][i][0]==2){
      spriteA[i].angle+=90;
    }else if(generationA[currentgen][i][0]==3){
      spriteA[i].angle+=135;
    }else if(generationA[currentgen][i][0]==4){
      spriteA[i].angle+=180;
    }else if(generationA[currentgen][i][0]==5){
      spriteA[i].angle-=135;
    }else if(generationA[currentgen][i][0]==6){
      spriteA[i].angle-=90;
    }
    spriteA[i].alive=true;  //Just in case for now
    spriteB[i]=game.add.sprite(playerStartX,playerStartY,'user2');
    if(generationB[currentgen][i][0]==7){
      spriteB[i].angle-=45;
    }else if(generationB[currentgen][i][0]==1){
      spriteB[i].angle+=45;
    }else if(generationB[currentgen][i][0]==2){
      spriteB[i].angle+=90;
    }else if(generationB[currentgen][i][0]==3){
      spriteB[i].angle+=135;
    }else if(generationB[currentgen][i][0]==4){
      spriteB[i].angle+=180;
    }else if(generationB[currentgen][i][0]==5){
      spriteB[i].angle-=135;
    }else if(generationB[currentgen][i][0]==6){
      spriteB[i].angle-=90;
    }
    spriteB[i].alive=true;  //Just in case for now

    counterA[i]=generationA[currentgen][i][0];
    counterB[i]=generationB[currentgen][i][0];
  }
  game.physics.enable(spriteA, Phaser.Physics.ARCADE);
  game.physics.enable(spriteB, Phaser.Physics.ARCADE);
}

function create(){
  game.physics.startSystem(Phaser.Physics.ARCADE);  //NECESSARY... I THINK...
  currentgen=0;

  //Get shit from JSON
  generationA=json.Player1;  //[ gen1[g1[],[],[],[],[]], gen2[g2[],[],[],[]] ]
  generationB=json.Player2;
  obstacleCoord=json.board; //[ [x,y], [x1,y1] ]
  flag=json.flag; //TELL GERARDO [x,y]
  //start=json.start; start place

  restartThings();

  //Add OBSTACLES to arrays and alive
  for(var i=0;i<obstacleCoord.length;i++){
    obstacles[i]=game.add.sprite(obstacleCoord[i][0],obstacleCoord[i][1],'obst');
  }
  game.physics.enable(obstacles, Phaser.Physics.ARCADE);

  //STOP

  // PAUSE/PLAY
  // pauseClick = this.input.keyboard.addKey(Phaser.Keyboard.SPACEBAR);
  // spaceKey.onDown.add(togglePause, this);
  // IF PRESSED PAUSE, IT PAUSES LIKE THIS
}

function togglePause(){
  game.physics.arcade.isPaused = (game.physics.arcade.isPaused) ? false : true;
}

function toggleStop(){

}

function update(){ //PHYSICS SHIT calculate
  on=true;
  if(currentStringpos>generationA[0][0].length && currentgen<generationA.length-1){
    currentStringpos=1;
    currentgen++;
    restartThings();
  }
  for(var i=0;i<generationA[0].length;i++){
    if(generationA[currentgen][i][currentStringpos]==0){
      counterA[i]--;
      if(counterA[i]<0){
        counterA[i]=7;
      }
      spriteA[i].angle-=45;
    }else if(generationA[currentgen][i][currentStringpos]==2){
      counterA[i]++;
      if(counterA[i]>7){
        counterA[i]=0;
      }
      spriteA[i].angle+=45;
    }
    if(counterA[i]==0){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x+20*con,spriteA[i].y,speed,10000);
    }else if(counterA[i]==1){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x+10*con,spriteA[i].y-10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x+10*con,spriteA[i].y-10*con,speed,10000);
    }else if(counterA[i]==2){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x,spriteA[i].y-20*con,speed,10000);
    }else if(counterA[i]==3){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x-10*con,spriteA[i].y-10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x-10*con,spriteA[i].y-10*con,speed,10000);
    }else if(counterA[i]==4){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x-20*con,spriteA[i].y,speed,10000);
    }else if(counterA[i]==5){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x-10*con,spriteA[i].y+10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x-10*con,spriteA[i].y+10*con,speed,10000);
    }else if(counterA[i]==6){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x,spriteA[i].y+20*con,speed,10000);
    }else if(counterA[i]==7){
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x+10*con,spriteA[i].y+10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteA[i],spriteA[i].x+10*con,spriteA[i].y+10*con,speed,10000);
    }

    if(generationB[currentgen][i][currentStringpos]==0){
      counterB[i]--;
      if(counterB[i]<0){
        counterB[i]=7;
      }
      spriteB[i].angle-=45;
    }else if(generationB[currentgen][i][currentStringpos]==2){
      counterB[i]++;
      if(counterB[i]>7){
        counterB[i]=0;
      }
      spriteB[i].angle+=45;
    }
    if(counterB[i]==0){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x+20*con,spriteB[i].y,speed,10000);
    }else if(counterB[i]==1){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x+10*con,spriteB[i].y-10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x+10*con,spriteB[i].y-10*con,speed,10000);
    }else if(counterB[i]==2){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x,spriteB[i].y-20*con,speed,10000);
    }else if(counterB[i]==3){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x-10*con,spriteB[i].y-10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x-10*con,spriteB[i].y-10*con,speed,10000);
    }else if(counterB[i]==4){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x-20*con,spriteB[i].y,speed,10000);
    }else if(counterB[i]==5){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x-10*con,spriteB[i].y+10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x-10*con,spriteB[i].y+10*con,speed,10000);
    }else if(counterB[i]==6){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x,spriteB[i].y+20*con,speed,10000);
    }else if(counterB[i]==7){
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x+10*con,spriteB[i].y+10*con,speed,10000);
      game.physics.arcade.moveToXY(spriteB[i],spriteB[i].x+10*con,spriteB[i].y+10*con,speed,10000);
    }
  }
  currentStringpos++;
}

function render(){  //JUST DRAW
  if(on){
    game.debug.text('Generation '+(currentgen+1), 32, 32);
  }
}
